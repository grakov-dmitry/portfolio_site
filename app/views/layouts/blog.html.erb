<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="keywords" content="<%= @seo_keywords %>">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div class="container">
  <%#= render 'shared/blog_header' %>
  <%= render 'shared/blog_nav' %>

  <main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">
      <%= render 'shared/blog_masthead' %>
        <%= yield %>
      </div>
      <%= render 'shared/blog_sidebar' %>
    </div>
    <%= render 'shared/blog_footer' %>

    <%#= render "shared/nav", location: 'bottom' %>
    <%= source_helper("blog") %>

  </main>
</div>
</body>
</html>
